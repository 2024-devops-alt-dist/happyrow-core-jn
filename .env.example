# Example environment variables for local development
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://username:password@localhost:5432/happyrow_dev
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_MAX_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000
DB_SSL_MODE=disable

# Application Configuration
ENVIRONMENT=development
KTOR_ENV=development
PORT=8080

# For Production (Render), these values should be set in the Render dashboard:
# DATABASE_URL=postgresql://user:pass@host:port/db (from Render PostgreSQL service)
# ENVIRONMENT=production
# KTOR_ENV=production
# DB_SSL_MODE=require
